    #parse("nav.vm")

<div class="card formulaire">
    <div class="card-header">
        Ajouter un poste
    </div>
    <div class="card-body">
        <div class="row">
            <form action="ajouterPost" method="POST">
                <div class="form-group">
                    <label for="title">Titre</label>
                    #springFormInput("newPost.title" "class='form-control' id='title' placeholder='Titre'")
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    #springFormTextarea("newPost.description" "class='form-control' id='description' placeholder='Description'")
                </div>
                <button type="submit" class="btn btn-success">Montrer mon chaton mignon !</button>
            </form>
        </div>
    </div>
</div>

#include("footer.vm")
</body>
